<%- include ("../../partials/header.ejs")%>

<body>
    <%- include ("../../partials/adminnavbar.ejs")%>
    <div class="container">
        <br>
        <div class="card-header">
            <h1>Editar produto</h1>
        </div>
    </div>

    <%- include ("../../partials/erros.ejs")%>

    <br>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <form action="/admin/produto/atualizar" method="POST">
                    <label for="nome">Nome : </label>
                    <input id="nome" name="nome" type="text" placeholder="Insira o nome do produto"
                        value="<%= produto.nome %>" class="form-control">
                    <label for="descricao">Descrição : </label>
                    <input id="descricao" name="descricao" type="text" placeholder="Insira a descrição do produto"
                    value="<%= produto.descricao %>" class="form-control">
                    <label for="preco">Preço : </label>
                    <input id="preco" name="preco" type="text" placeholder="Insira o preço do produto"
                    value="<%= produto.preco %>" class="form-control">
                    <br>
                    <select class="form-control" name="categoria" id="categoria">
                        <% categorias.forEach((categoria)=>{  %>
                            <% if(categoria.id == produto.categoriaId) { %>
                                <option value="<%= categoria.id %>" selected><%= categoria.nome %></option>
                            <% } else { %>
                                <option value="<%= categoria.id %>" ><%= categoria.nome %></option>
                            <% } %>
                        <% }) %>
                    </select>
                    <br>
                    <input type="hidden" name="id" id="id" value="<%= produto.id %>">
                    <button type="submit" class="btn btn-primary">Atualizar</button>
                </form>
            </div>  
        </div>        
    </div>
</body>

<script>
    $(document).ready(function($){
        $(document).ready(function () {
		$('#preco').mask("##0.00", {reverse: true});
	});
    })
</script>

